        "type": "shell",
        "command": [
          "docker run -d --rm --volume ${workspaceFolder}/kubyterlab-ds/notebooks:/jupyterlab/notebooks --name kubyterlab-ds kubyterlab-ds:${config:kubyterlab-ds.version};",
          "docker exec -it kubyterlab-ds bash -c 'mkdir -p /tmp; pip freeze > /tmp/freeze.txt';",
          "mkdir -p ./kubyterlab-ds/freeze;",
          "docker cp kubyterlab-ds:/tmp/freeze.txt ./kubyterlab-ds/freeze/${config:kubyterlab-ds.version}.txt;",
          "docker stop kubyterlab-ds",
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
