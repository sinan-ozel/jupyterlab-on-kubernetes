{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "download-hello-world-kubeconfig",
        "type": "shell",
        "command": [
          "gh auth status >/dev/null 2>&1 || gh auth login;",
          "mkdir -p .iac;",
          "[ -f ${workspaceFolder}/.iac/hello-k8s.json ] && rm ${workspaceFolder}/.iac/hello-k8s.json;",
          "gh run download --repo ${config:iac.repo} --name pulumi-${input:provider}-hello-k8s --dir ${workspaceFolder}/.iac;",
          "cat .iac/hello-k8s.json | jq -r '.kubeconfig' > ${workspaceFolder}/.iac/kubeconfig.yaml;",
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        },
        "problemMatcher": [],
      },
      {
        "label": "build-fastapi",
        "type": "shell",
        "command": [
          "docker build --tag fastapi:latest --file ./fastapi/Dockerfile .;",
        ],
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
      },
      {
        "label": "push-fastapi-to-aws",
        "dependsOn": ["build", "freeze"],
        "type": "shell",
        "command": [
          "AWS_ACCOUNT_ID=$(aws sts get-caller-identity --query 'Account' --output text);",
          "aws ecr get-login-password --region ${config:aws.region} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${config:aws.region}.amazonaws.com",
        ],
        "windows": {
          "command": [
            "$AWS_ACCOUNT_ID = $(aws sts get-caller-identity --query Account --output text); ",
            "$HOSTNAME = \\\"${AWS_ACCOUNT_ID}.dkr.ecr.${config:aws.region}.amazonaws.com\\\";",
            "aws ecr get-login-password --region ${config:aws.region} | docker login --username AWS --password-stdin $HOSTNAME;",
            "docker tag fastapi:latest $HOSTNAME/test/fastapi:latest;",
            "docker push $HOSTNAME/test/fastapi:latest;",
          ]
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "build-kubyterlab-ds",
        "type": "shell",
        "command": [
          "docker build --tag kubyterlab-ds:${config:kubyterlab-ds.version} ",
          "--label org.opencontainers.image.title=kubyterlab-ds ",
          "--label org.opencontainers.image.description='JupyterLab environment for data science with Redis, Qdrant, ChromaDB, and LanceDB' ",
          "--label org.opencontainers.image.version=${config:kubyterlab-ds.version} ",
          "--label org.opencontainers.image.created=$(date -u +%Y-%m-%dT%H:%M:%SZ) ",
          "--label org.opencontainers.image.authors='Sinan Ozel' ",
          "--label org.opencontainers.image.url=https://github.com/sinan-ozel/jupyterlab-on-kubernetes/tree/main/kubyterlab-ds ",
          "--label org.opencontainers.image.source=https://github.com/sinan-ozel/jupyterlab-on-kubernetes/tree/main/kubyterlab-ds ",
          "--label org.opencontainers.image.vendor='Sinan Ozel' ",
          "--label org.opencontainers.image.licenses=MIT ",
          "--label org.opencontainers.image.base.name=jupyter/base-notebook:latest ",
          "--file ./kubyterlab-ds/Dockerfile .;",
        ],
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
      },
      {
        "label": "test-kubyterlab-ds",
        "dependsOn": "build-kubyterlab-ds",
        "type": "shell",
        "command": [
          "cd ${workspaceFolder}/kubyterlab-ds;",
          "mkdir -p ./data/jupyter;",
          "KUBYTERLAB_DS_VERSION=${config:kubyterlab-ds.version} docker compose up -d;",
          "sleep 10;",
          "echo '=== Checking container health ===';",
          "docker ps --filter name=jupyter-notebook --format 'table {{.Names}}\\t{{.Status}}';",
          "if ! docker exec jupyter-notebook bash -c 'ps aux | grep jupyter' > /dev/null 2>&1; then echo 'ERROR: Jupyter is not running!' && docker logs jupyter-notebook && exit 1; fi;",
          "docker exec jupyter-notebook bash -c 'pip list' || (echo 'ERROR: Container not responding' && exit 1);",
          "docker exec jupyter-notebook bash -c 'jupyter server list' || (echo 'ERROR: Jupyter server failed' && exit 1);",
          "docker exec jupyter-notebook python3 -c 'import redis; r = redis.Redis(host=\"redis\", port=6379); r.ping(); print(\"Redis connection: OK\")';",
          "docker exec jupyter-notebook python3 -c 'from qdrant_client import QdrantClient; client = QdrantClient(host=\"qdrant\", port=6333); print(f\"Qdrant connection: OK, collections={client.get_collections()}\")';",
          "docker exec jupyter-notebook python3 -c 'import chromadb; client = chromadb.Client(); print(f\"ChromaDB: OK, version={chromadb.__version__}\")';",
          "docker exec jupyter-notebook python3 -c 'import lancedb; print(f\"LanceDB: OK, version={lancedb.__version__}\")';",
          "echo '=== Testing PostgreSQL connection ===';",
          "docker exec jupyter-notebook python3 -c 'import psycopg2; conn = psycopg2.connect(host=\"postgres\", port=5432, database=\"kubyterlab\", user=\"jupyter\", password=\"jupyter_password\"); cur = conn.cursor(); cur.execute(\"SELECT version()\"); result = cur.fetchone(); print(f\"PostgreSQL connection: OK - {result[0]}\"); cur.close(); conn.close()';",
          "echo '=== Testing core data science packages ===';",
          "docker exec jupyter-notebook python3 -c 'import warnings; warnings.filterwarnings(\"ignore\"); import numpy as np; import pandas as pd; import matplotlib.pyplot as plt; import seaborn as sns; import sklearn; print(\"Data science stack: OK\")';",
          "echo '=== Testing JupyterLab extensions ===';",
          "docker exec jupyter-notebook python3 -c 'import warnings; warnings.filterwarnings(\"ignore\"); from pylsp import lsp; print(\"Python LSP server: OK\")';",
          "docker exec jupyter-notebook bash -c 'jupyter labextension list | grep -E \"(lsp|git|toc|system)\" && echo \"JupyterLab extensions: OK\" || echo \"WARNING: Some extensions may not be loaded\"';",
          "echo '=== Testing widget functionality ===';",
          "docker exec jupyter-notebook python3 -c 'import warnings; warnings.filterwarnings(\"ignore\"); import ipywidgets as widgets; from IPython.display import display; print(f\"ipywidgets: OK, version={widgets.__version__}\")';",
          "echo '=== Testing web scraping and file handling ===';",
          "docker exec jupyter-notebook python3 -c 'import warnings; warnings.filterwarnings(\"ignore\"); import requests; import bs4; import lxml; import openpyxl; import yaml; print(\"Web scraping and file tools: OK\")';",
          "docker exec jupyter-notebook python3 -c 'import requests; r = requests.get(\"http://embedding:11434/api/tags\"); print(f\"Embedding service: {r.status_code}\")';",
          "docker exec jupyter-notebook python3 -c 'import requests; r = requests.get(\"http://llm:11434/api/tags\"); print(f\"LLM service: {r.status_code}\")';",
          "KUBYTERLAB_DS_VERSION=${config:kubyterlab-ds.version} docker compose down",
        ],
        "group": {
            "kind": "test",
            "isDefault": false
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "test-kubyterlab-ds-packages",
        "dependsOn": "build-kubyterlab-ds",
        "type": "shell",
        "command": [
          "echo '=== Testing Package Imports and Functionality (Standalone) ===';",
          "docker run --rm kubyterlab-ds:${config:kubyterlab-ds.version} python3 -c '",
          "import warnings; warnings.filterwarnings(\"ignore\");",
          "print(\"=== Core Python Libraries ===\");",
          "import sys; print(f\"Python: {sys.version}\");",
          "import numpy as np; print(f\"NumPy: {np.__version__}\");",
          "import pandas as pd; print(f\"Pandas: {pd.__version__}\");",
          "import matplotlib; print(f\"Matplotlib: {matplotlib.__version__}\");",
          "import seaborn as sns; print(f\"Seaborn: {sns.__version__}\");",
          "import sklearn; print(f\"Scikit-learn: {sklearn.__version__}\");",
          "print(\"\\n=== Database Clients ===\");",
          "import redis; print(f\"Redis client: {redis.__version__}\");",
          "import psycopg2; print(f\"PostgreSQL client: {psycopg2.__version__}\");",
          "from qdrant_client import QdrantClient; print(\"Qdrant client: OK\");",
          "import chromadb; print(f\"ChromaDB: {chromadb.__version__}\");",
          "import lancedb; print(f\"LanceDB: {lancedb.__version__}\");",
          "print(\"\\n=== Web & File Libraries ===\");",
          "import requests; print(f\"Requests: {requests.__version__}\");",
          "import bs4; print(f\"BeautifulSoup: {bs4.__version__}\");",
          "import lxml; print(f\"lxml: {lxml.__version__}\");",
          "import openpyxl; print(f\"OpenPyXL: {openpyxl.__version__}\");",
          "import yaml; print(\"PyYAML: OK\");",
          "print(\"\\n=== JupyterLab Extensions ===\");",
          "import ipywidgets as widgets; print(f\"ipywidgets: {widgets.__version__}\");",
          "from pylsp import lsp; print(\"Python LSP server: OK\");",
          "print(\"\\n=== Quick Functionality Test ===\");",
          "df = pd.DataFrame({\\\"x\\\": [1,2,3], \\\"y\\\": [4,5,6]}); print(f\"Pandas DataFrame: {df.shape}\");",
          "arr = np.array([1,2,3]); print(f\"NumPy array: {arr.sum()}\");",
          "print(\"\\n✅ All package imports successful!\")';",
          "echo '=== Testing JupyterLab Extensions List ===';",
          "docker run --rm kubyterlab-ds:${config:kubyterlab-ds.version} jupyter labextension list;"
        ],
        "group": {
          "kind": "test",
          "isDefault": false
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "problemMatcher": []
      },
